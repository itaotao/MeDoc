{
  "name": "me-doc",
  "version": "1.0.1",
  "main": "main.js",
  "description": "Online Markdown Editor using Qiniu cloud service",
  "author": {
    "name": "itaotao",
    "email": "jia_bin@foxmail.com"
  },
  "repository": "https://github.com/itaotao/MeDoc",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "ele": "electron .",
    "buildMain": "webpack",
    "dev": "concurrently \"wait-on http://localhost:3000/ && electron .\"  \"cross-env BROWSER=none npm start\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "cross-env GH_TOKEN=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 electron-builder",
    "prerelease": "npm run build && npm run buildMain",
    "prepack": "npm run build && npm run buildMain",
    "predist": "npm run build && npm run buildMain"
  },
  "homepage": "./",
  "build": {
    "appId": "MeDoc",
    "productName": "觅文档",
    "copyright": "Copyright © 2022 ${author}",
    "files": [
      "public/**/*",
      "build/**/*",
      "node_modules/**/*",
      "settings/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "publish": [
      "github"
    ],
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${name}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${name}-Web-Setup-${version}.${ext}",
      "publisherName": "itaotao"
    },
    "linux": {
      "target": [
        "tar.gz",
        "AppImage"
      ],
      "icon": "assets/icon@256x256.icns",
      "artifactName": "${name}-${version}.${ext}"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "extends": null
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "bootstrap": "^5.2.1",
    "electron-store": "^8.1.0",
    "electron-log": "^4.4.8",
    "node-fetch": "^2.6.7",
    "progress-stream": "^2.0.0"
  },
  "devDependencies": {
    "@electron/remote": "^2.0.8",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@mui/icons-material": "^5.10.9",
    "@mui/material": "^5.10.11",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.1.3",
    "bootstrap": "^5.2.1",
    "bootstrap-icons": "^1.9.1",
    "classnames": "^2.3.2",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^21.0.1",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "marked": "^4.1.1",
    "node-sass": "^7.0.3",
    "nrm": "^1.2.5",
    "prop-types": "^15.8.1",
    "qiniu": "^7.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown-editor-lite": "^1.3.3",
    "react-scripts": "5.0.1",
    "uuid": "^9.0.0",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4",
    "webpack-cli": "^4.10.0"
  }
}
